# ApplyWise Backend Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Firebase Configuration
# ============================================================================
FIREBASE_CREDENTIALS_PATH=/path/to/your/firebase-service-account.json
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# ============================================================================
# Application Configuration
# ============================================================================
DEBUG=false
ENVIRONMENT=development
# Options: development, staging, production

# ============================================================================
# Browser/Selenium Configuration
# ============================================================================
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=10

# ============================================================================
# Celery Configuration
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# PostgreSQL Configuration
# ============================================================================
POSTGRES_HOST=your-postgres-host.amazonaws.com
POSTGRES_PORT=5432
POSTGRES_DB=applywise
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# ============================================================================
# AWS Configuration
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ============================================================================
# OpenAI Configuration
# ============================================================================
OPENAI_API_KEY=your-openai-api-key-here

# ============================================================================
# WebSocket Configuration (Optional)
# ============================================================================
WEBSOCKET_URL=ws://localhost:8001/ws

# ============================================================================
# Notes:
# ============================================================================
# - DATABASE_URL is automatically constructed from PostgreSQL settings
# - Boolean values: true/false (case insensitive)
# - CORS_ORIGINS can be a single origin or comma-separated list
# - All settings have sensible defaults except credentials
# - For production, ensure DEBUG=false and ENVIRONMENT=production 